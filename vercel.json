{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "index.js" },
    { "src": "/(.*\\.(js|css|png|jpg|gif|svg|ico))", "dest": "client/build/$1" },
    { "src": "/(.*)", "dest": "client/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 